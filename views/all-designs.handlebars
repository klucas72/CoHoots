<div class="row container-fluid" style="margin-top: 5%;" id="design">
  {{#each designs as |design|}}
    <input type="hidden" id="design-id" value="{{design.id}}" />
    <div class="col-md-3">
      <div class="card-placement">
        <div class="card" style="width: 18rem;">
          <ul class="list-group list-group-flush">
            <div
              style="display: flex; justify-content: space-evenly; padding-top: 3%; padding-bottom: 3%;"
            >
              <span>Uploaded By: {{user.username}}</span>
            </div>
          </ul>
          <img
            src="data:image/jpeg;base64,{{design.data}}"
            class="card-img-top"
            id="{{design.id}}"
            alt="..."
            style="height: 300px;"
          />
          <ul class="list-group list-group-flush">
            <form
              id="{{design.id}}-like"
              class="like-toggle"
              data-name="{{design.id}}"
            >
              <input type="hidden" id="design-id" value="{{design.id}}" />
              {{!-- {{#if design.likes.userId = req.session.id}} --}}

              <button type="submit" class="like-btn">‚ù§Ô∏è</button>

              {{!-- {{else}} --}}
              {{!-- <button type='submit' class='like-btn'>ü§ç</button>
                        {{/if}} --}}
              <span style="margin-left: 25%;">Cost ${{design.price}}</span>

            </form>

            {{!-- <div class="card-body">
              <div style="display: flex; justify-content: space-between">
                <span>Cost ${{design.price}}</span>
              </div>
            </div> --}}
            <div
              style="display: flex; justify-content: space-between; padding: 3%;"
            >
              <span><a href="/api/comments/{{design.id}}">View comments</a></span>
            </div>
            <form id="commentForm">
              <div
                class="input-group input-group-sm mb-3"
                style="padding-left:2%; padding-right:2%"
              >
                <input
                  type="text"
                  id="comment-body"
                  data-id="{{design.id}}"
                  class="form-control"
                  aria-label="Sizing example input"
                  placeholder="Leave a Comment"
                  aria-describedby="inputGroup-sizing-sm"
                />
                <button
                  type="submit"
                  class="btn btn-light"
                  style="margin-left: 2%"
                >Send</button>
              </div>
            </form>
          </ul>
        </div>
      </div>
    </div>
  {{/each}}
</div>
